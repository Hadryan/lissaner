<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daniel_araujo.always_recording_microphone">

    <!-- Necessary to use microphone. -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- So that the microphone can be recorded even if the user closes the app or locks phone -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".android.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.daniel_araujo.always_recording_microphone.android.ui.dev.DevRecButtonActivity" android:exported="true"/>

        <activity android:name="com.daniel_araujo.always_recording_microphone.android.ui.dev.DevAudioRecordCombinationsActivity" android:exported="true"/>

        <activity android:name="com.daniel_araujo.always_recording_microphone.android.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".android.RecordingService" />
    </application>

</manifest>