<resources>
    <declare-styleable name="AppTheme">
        <attr name="wellStyle" format="reference"/>
    </declare-styleable>

    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- General -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">?android:textColor</item>
        <item name="android:textColorSecondary">?android:textColor</item>
        <item name="android:textColorTertiary">?android:textColor</item>
        <item name="android:textColorLink">?android:colorAccent</item>

        <!-- Hides action bar -->
        <item name="windowNoTitle">true</item>

        <!-- Window -->
        <item name="android:windowBackground">?android:colorBackground</item>

        <!-- Buttons. -->
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="imageButtonStyle">@style/AppTheme.ImageButton</item>

        <!-- Tabs. -->
        <item name="tabStyle">@style/AppTheme.TabLayout</item>

        <!-- Well. -->
        <item name="wellStyle">@style/AppTheme.Well</item>

        <!-- For a number picker library -->
        <item name="np_textSize">@dimen/commonTextSize</item>
        <item name="np_selectedTextSize">@dimen/commonTextSize</item>
        <item name="np_dividerColor">@color/divider</item>
        <item name="np_selectedTextColor">@color/textColor</item>
        <item name="np_textColor">@color/textColor</item>
    </style>

    <!-- Default style for tabs. -->
    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/textColor</item>
        <item name="tabTextColor">@color/textColor</item>
        <item name="tabBackground">@color/colorPrimary</item>

        <!-- Makes sure that the TabLayout occupies the entire width in landscape mode. -->
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
    </style>

    <!-- Default style for buttons. -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- For lists of things -->
    <style name="AppTheme.ListThings" parent="@android:style/Widget.ListView">
        <item name="android:divider">@drawable/separator</item>
        <item name="android:showDividers">middle</item>
    </style>

    <!-- For wells -->
    <style name="AppTheme.Well">
        <item name="android:padding">@dimen/wellPadding</item>
    </style>

    <!-- Dividers -->
    <style name="AppTheme.Divider">
        <item name="android:background">@color/divider</item>
    </style>
    <style name="AppTheme.Divider.Horizontal" parent="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="AppTheme.Divider.Vertical" parent="AppTheme.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Note" parent="Widget.AppCompat.TextView">
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
</resources>