<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dev.DevAudioRecordCombinationsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/source_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source" />

        <Spinner
            android:id="@+id/source_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/channel_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channels" />

        <Spinner
            android:id="@+id/channel_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sample_rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Rate" />

        <Spinner
            android:id="@+id/sample_rate_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/encoding_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encoding" />

        <Spinner
            android:id="@+id/encoding_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/result_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?android:attr/scrollbarSize"
        android:text="Result" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:background="#FFF0F0"
        android:text="TextView" />

</LinearLayout>